// Imágenes y tamaños
.page
.entradas
	&__article
		.wp-caption
			border 1px solid plateado
			display table-cell
			overflow hidden
			padding 0
			vertical-align top

			a
				display block
				position relative
				text-decoration none
				transition_comun()
				imagenizador()

			.wp-caption-text
				background gris_nube
				color gris_suave
				font-family fuente_heading_bold_italic
				font-style italic
				font-weight bolder
				padding 0.5em
				text-align center


			img
				display block
				height auto !important
				width 100%

// Alineaciones
.entradas
.page
	&__article
		figure.aligncenter
			display block
			margin 1em auto
			max-width 100%
			text-align center

		figure.alignleft
		figure.alignright
			max-width 100%

@media all and (min-width: 480px)
	.entradas
	.page
		&__article
			figure.alignleft
					display inline-block
					float left
					margin 1em 1em 1em 0

			figure.alignright
					display inline-block
					float right
					margin 1em 0 1em 1em
