// El Sidebar y todo su contenido
.sidebar
	// background blanco_puro
	box-sizing border-box
	margin 0
	overflow hidden
	vertical-align top

	&__section
		// border 1px solid pink
		box-sizing border-box
		margin $em
		text-align left

		&__article
			border 1px solid blanco_grisaceo2
			// border-radius 0 0 3px 3px
			box-sizing border-box
			color gris
			line-height 150%
			overflow hidden
			padding $em
			// margin $em

			ul
				// list-style-image url("../img/Entypo_e766(0)_16.png")
				//list-style-image url("data:image/png;base64,")
				padding-left 1.4em

			ul, ol
				li
					border-bottom 1px solid gris_nube
					margin-bottom 0.25em
					margin-top 0.25em

				li.last-child
					border-bottom none

			&__content-left
				display table-cell
				max-width 50px
				min-width 50px
				vertical-align top

			&__content-right
				box-sizing border-box
				display table-cell
				padding 0 1em
				vertical-align top
				width 100%

				.sidebar__section__article__subtitle
					font-size $em*0.7
					margin-top 0
					margin-bottom 0
					a
						text-decoration none

				.sidebar__section__article__fecha
					font-family fuente_heading_bold
					font-size $em*0.7

			&__figure
				display block
				margin 0
				max-width 100px
				padding 0
				position relative
				overflow hidden

				a
					imagenizador()

					img
						display block
						width 100%

			&__post
				border-bottom 1px solid gris_nube
				display table
				margin-bottom 0.5em
				margin-top 0.5em
				padding-bottom 0.5em
				overflow hidden

			&__post.first-child
			&__post:first-child
				margin-top 2em

			&__post.last-child
			&__post:last-child
				border-bottom none
				margin-bottom 0

		&__header
			background blanco_grisaceo2
			// border-radius 3px 3px 0 0
			// border-bottom 10px solid gris_suave
			padding ($em/2) $em

			&__title
				color gris_suave
				font-family fuente_heading
				font-size $em*0.7
				margin 0
				padding 0
				text-transform uppercase



@media all and (min-width: 900px)
	.sidebar
		display inline-block
		float right
		min-width 30%
		max-width 30%
		width 30%
		// margin-right $em
		vertical-align top

		&__section
			margin $em 0

			&__article
				&__post.first-child
				&__post:first-child
					margin-top 0.5em
				&__content-right
					.sidebar__section__article__subtitle
						font-size $em*0.9em

		&__section:first-child
		&__section.first-child
			margin-top 0
