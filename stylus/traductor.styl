// sección de la bander de elección de idioma
.traductor
	text-align: center

	a
		color: blanco_transparente
		display: inline-block
		font-family: fuente_heading
		font-size: 0.8em
		margin: 0 0.25em
		padding: 0.25em 0.5em
		text-decoration: none
		transition_comun()

		&:hover
			color: blanco_puro

		img
			display: inline-block
			// width: 25px
			vertical-align: middle

@media all and (min-width: 1100px)
	.traductor
		text-align: right
		padding-right: 0.5em