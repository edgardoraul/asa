// El footer de la web
.footer
	background gris_fuerte
	border-top 1px solid gris
	color blanco
	font-family fuente_heading
	letter-spacing -1px
	padding 1em 1em 2em 1em

	// Copyright
	&__copyright
		p
			text-indent 0

	// las Redes sociales
	&__redes_sociales
		display inline-block
		// background rgba(blanco, 0.8)
		padding $em*0.5 $em

		&__list
			margin 0
			padding 0

			&__item
				display inline-block
				margin-right 32px

				a
					display inline-block
					font-size 1.5em
					text-decoration none

			&__item:last-child
			&__item.last-child
				margin-right 0
	a
		text-decoration none

	a.whatsapp
		color esmeralda;


// Ir hacia arriba
.gotop
	bottom 2em
	display inline-block
	// height 50px
	// padding-right $em*0.5 !important
	position fixed
	right -5em
	transition_comun()
	// width 50px
	z-index 892

	a
		background negro
		border-radius 4px 0 0 4px
		font-size $em*0.8
		// background-image url("data:image/png;base64,")
		color blanco_puro
		display block
		height 100%
		opacity 0.5
		text-decoration none
		text-shadow_lindo()
		width 100%
		&:before
			padding $em*0.5
			display inline-block


		&:hover
			opacity 1

	&-mostrar
		// bottom 1em
		right 0

	&-ocultar
		// bottom -5em
		right -5em

@media only screen and ( min-width: 900px )
	.footer
		padding-bottom 1em


@media only print
	.gotop
		display none
