// Secciones de la web

// Cuerpos Centrales
.centrales
	align-items stretch
	align-content stretch
	position relative
	margin-top 1em
	display flex
	flex-direction row
	flex-wrap wrap
	justify-content center
	gap $em
	
	&__article
		display inline-block
		margin 3px
		overflow hidden
		position relative
		// max-width 45%
		// min-width 45%
		// vertical-align top
		
		&__content
			color gris_suave
			// display inline-block
			font-family fuente_heading
			font-size $em*0.9
			line-height 150%
			p
				text-indent 0
				a
					text-decoration none

			ul
				padding-left 1.4em

		
		&__figure
			background-color rgba(negro_puro, 0.5)
			margin 0
			overflow hidden
			padding 0
			position relative
			transition_comun()

			img
				display block
				margin 0
				padding 0
				position relative
				transition_comun()
				width 100%
				z-index -1

			&:hover
				background-color rgba(verde_asa, 0)
				img
					transform(scale(1.1))


		&__header
			background verde_asa
			padding 0
			position relative
			width 100%
			z-index 5

			&__title
				color blanco
				font-size $em*0.7
				margin 0
				padding $em*0.6
				text-transform uppercase
				text-indent 0

@media all and (min-width: 700px)
	// Cuerpos Centrales
	.centrales
		box-sizing border-box
		padding 0
		width 100%

		&__article
			box-sizing border-box
			// display inline-block
			// vertical-align top

@media all and (min-width: 1200px)
	.centrales
		flex-wrap nowrap
		justify-content space-between

