// Cuerpos Cruzados
.cruzados
	padding 1em
	margin 0 auto
	max-width 600px

	&__article
		box-sizing border-box
		margin 0 0 1em 0
		overflow hidden
	
		&__content
			box-sizing border-box
			color gris_suave
			font-family fuente_heading_bold
			line-height 150%
			text-indent 0 !important
			
			p
				text-indent 0 !important

			ul
				padding-left 1.4em

			&__header
				position relative
				transition_comun()

				&__title
					color verde_azuladored
					font-family fuente_heading_bold
					font-size 0.9em
					margin 0
					padding 0
					text-transform uppercase

					a
						color blanco
						display inline-block
						transition all 1.2s ease
						text-decoration none
						&:hover
						&:focus
							margin 0 auto
		
		&__content
		&__figure
			display inline-block
			vertical-align top
		
		&__content
			font-size 1.4em
		
		&__figure
			box-sizing border-box
			margin 0
			position relative
			overflow hidden

			img
				display block
				width 100%
			
			a:before
				background verde_azulado
				content ""
				display block
				height 100%
				opacity 0
				position absolute
				transition_comun()
				width 100%
			
			a:after
				border none
				color blanco
				content "+"
				display inline-block
				line-height 70%
				font-size 60px
				height 40px
				left 50%
				margin -20px 0 0 -20px
				opacity 0
				position absolute
				text-align center
				text-decoration underline
				transition_comun()
				top 50%
				width 40px
				z-index 2

			a
				display block
				position relative
				&:hover
				&:focus
					&:before
						opacity 0.5

					&:after
						opacity 1
						text-decoration none
	

@media all and (min-width: 700px)
	// Cuerpos Cruzados
	.cruzados
		max-width 100%

		&__article
			&__content
				float right
				margin 0 0 0 1%
				max-width 49%

			&__figure
				float left
				margin 0 0 1% 0
				max-width 49%

		// Cambiando el orden
		&__article.nth-child-even
			.cruzados__article__content
				float left
				margin 0 1% 0 0

			.cruzados__article__figure
				float right
				margin 0 0 0 1%

@media all and (min-width: 700px)
	.cruzados
		padding-top 0

// Para eliminar el espacio a la izquierda
@media all and (min-width: 1230px)
	.cruzados
		padding-left 0

