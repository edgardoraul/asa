// El header principal de la web
h1, h2, h3, h4, h5, h6
	font-family fuente_heading_bold

.heading
	background verde_asa
	box-shadow 0px 2px 10px negro_header
	position relative
	z-index 87

	// El Botón del Menú
	&__menu
		display inline-block
		float right
		margin 0.5em 0

		a
			color blanco
			font-size $em*1.5
			font-weight lighter
			text-decoration none
			transition all 0.2s ease-in-out
			&:hover
				color azul_feisbuc

	// El Título principal
	&__title
		color gris_suave
		clear both
		font-size $em*0.7
		padding-left 0.5em
		padding-right 0.5em
	
	// Titular principal Alterno
	&__title--alterno
		display inline
		color blanco_puro

		h1, h2
			display inline-block
			font-family fuente_heading_bold
			font-weight bolder
			padding 0
			margin 0
			text-transform uppercase
			font-size $em


// El logotipo
.heading__logo
	display inline-block
	float left
	margin-left 5px
	margin-top 5px
	transition all 0.1s ease-in-out

	&__figure
		max-width 200px
		padding 0
		margin 0.25em
		img
			max-height 40px
			width 100%

// Las Mediaqueries
@media all and (min-width: 400px)
	.heading
		&__menu
			margin $em 0

		&__logo
			&__figure
				max-width 300px


@media all and (min-width: 1000px)
	.heading
		width 100%

		// El botón del Menú
		&__menu
			display none

		// El logotipo
		&__logo
			&__figure
				margin 0.5em

		// El Título principal
		&__title
			font-size $em*1.1
